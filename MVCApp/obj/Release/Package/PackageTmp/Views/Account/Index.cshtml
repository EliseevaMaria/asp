@model MVCApp.Models.User

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
{
    <table>
        <tr>
            <td>Name: </td>
            <td>@Html.TextBox("login", "")</td>
        </tr>
        <tr>
            <td>Password: </td>
            <td>@Html.Password("password", "")</td>
        </tr>
    </table>
    <p><input type="submit" value="Log in" /></p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
