@model MVCApp.Models.User

@{
    ViewBag.Title = "Index";
}

<br />
<h2 class="center">Index</h2>
<br />

@using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
{
    <table class="center">
        <tr>
            <td>Name: </td>
            <td>@Html.TextBox("login", "")</td>
        </tr>
        <tr>
            <td>Password: </td>
            <td>@Html.Password("password", "")</td>
        </tr>
    </table>
    <br />
    <input class="center" type="submit" value="Log in" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
